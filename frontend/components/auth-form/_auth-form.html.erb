<div class="auth-form">
  <%= form_tag login_path, method: :post do %>
    <%= text_field_tag :username, '', 
      class: 'auth-form-input', 
      placeholder: 'Choose your username', 
      autofocus: true, 
      size: 50,
      required: true %>
    <%= submit_tag 'Sign me UP!', class: 'auth-form--submit' %>
  <% end %>
</div>
